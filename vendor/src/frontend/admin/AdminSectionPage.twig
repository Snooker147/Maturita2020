{% 
    include "widget/AdminForm.twig" with
    {
        "id": "page",

        "title": "AdminCreatePage",
        "actionMessage": "PageCreated",
        "actionButtonMessage": "ButtonCreatePage",

        "usage": "create",
        
        "useDeleteButton": false,
        "deleteMessage": "PageDeleted",
        "deleteMessageButton": "ButtonDeletePage",
        "deleteRedirect": "admin?page=page",

        "useList": true,
        "listHeader": "PageListHeader",
        "editorPage": "pageedit",
        "templateItemFields": ["LanguageID", "UniqueName"],

        "editIdValue": doc.ID,

        "useHtmlEditor": true,
        "initialHtmlValue": doc.HTML,

        "endpoint": "pages",
        "createMethod": "create-page",
        "paginateMethod": "get-pages",
        "deleteMethod": "remove-page",

        "inputs": [
            {
                "name": "unique",
                "icon": "fa-id-card",
                "title": "PageID",
                "placeholder": "PageIDPlaceholder",
                "bind": doc.UniqueName,
            },
            {
                "name": "heading",
                "icon": "fa-heading",
                "title": "PageTitle",
                "placeholder": "PageTitlePlaceholder",
                "bind": doc.HeaderText,
            }
        ],
        
        "inputEnums": [
            {
                "name": "languageid",
                "icon": "fa-flag",
                "title": "PageLanguage",
                "options": lang.getRegisteredLanguagesAsSortifiedArray(),
                "bind": doc.LanguageID
            }
        ]

    }
%}