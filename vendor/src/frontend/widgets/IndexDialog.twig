                    <button data-result="confirm">
                        {{ lang.get("ButtonConfirm") }}
                    </button>
        
                    <button data-result="cancel">
                        {{ lang.get("ButtonCancel") }}
                    </button>
                </div>
    
                <div class="index-dialog-buttons-section" data-type="ok">
                    <button data-result="ok">
                        {{ lang.get("ButtonOK") }}
                    </button>
                </div>
            </div> 
        </div>
